# Example configuration for Claude Desktop
# Copy this to your Claude Desktop config location and update with your credentials

{
  "mcpServers": {
    "gong": {
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "-e",
        "GONG_BASE_URL=https://api.gong.io",
        "-e",
        "GONG_ACCESS_KEY=YOUR_ACCESS_KEY_HERE",
        "-e",
        "GONG_ACCESS_KEY_SECRET=YOUR_SECRET_HERE",
        "ghcr.io/cedricziel/gong-mcp:latest"
      ]
    }
  }
}
